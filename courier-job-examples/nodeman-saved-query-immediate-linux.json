{
    "name":"nodeman-saved-query-immediate-linux",
    "description": "Demonstrating a courier job utlising a saved node query",
    "immediate": true,
    "exceptionRules":[],
    "target": {
            "executionType": "sequential",
            "groups":[
                {
                    "timeoutSeconds": 3000,
                    "batchSize": {
                        "type": "number",
                        "value": 1
                    },
                    "distributionMethod": "batching",
                    "successCriteria": [
                        {
                            "numRuns": { "type": "percent", "value": 100 },
                            "status": "success"
                        }
                    ],
                    "nodeListType":"savedFilter",
                    "filterId": "--QUERYID1--"
                }
            ]
        },
    "actions": {
            "accessMode": "agent",
            "steps":
            [
                {
                    "stepNumber": 1,
                    "interpreter": {
                        "name": "chef/courier-interpreter/os/shell"
                    },
                    "command": [
                        "sleep 60"
                    ],
                    "inputs": {},
                    "expectedInputs": { },
                    "outputFieldRules": {},
                    "retryCount": 0,
                    "failureBehavior": {
                        "action": "retryThenFail",
                        "retryBackoffStrategy": {
                            "name": "none",
                            "delaySeconds": 0,
                            "arguments": []
                        }
                    },
                    "limits": {},
                    "conditions": []
                }
            ]
        },
    "timeoutSeconds": 3000
}