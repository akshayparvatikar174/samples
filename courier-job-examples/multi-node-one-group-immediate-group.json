{
    "name":"multi-node-one-group-immediate-rolling-linux",
    "description": "demonstrating a immediate job executing sequential on one node at a time",
    "immediate": true,
    "exceptionRules":[],
    "target": {
            "executionType": "sequential",
            "groups":[
                {
                    "timeoutSeconds": 40,
                    "batchSize": {
                        "type": "number",
                        "value": 1
                    },
                    "distributionMethod": "rolling",
                    "successCriteria": [
                        {
                            "numRuns": { "type": "percent", "value": 100 },
                            "status": "success"
                        }
                    ],
                    "nodeListType":"nodes",
                    "nodeIdentifiers":[
                        "--NODE1--",
                        "--NODE2--",
                        "--NODE3--",
                        "--NODE4--",
                        "--NODE5--"
                    ]
                }
            ]
        },
    "actions": {
            "accessMode": "agent",
            "steps":
            [
                {
                    "stepNumber": 1,
                    "interpreter": {
                        "name": "chef/courier-interpreter/os/shell"
                    },
                    "command": [
                        "sleep 10"
                    ],
                    "inputs": {},
                    "expectedInputs": { },
                    "outputFieldRules": {},
                    "retryCount": 0,
                    "failureBehavior": {
                        "action": "retryThenFail",
                        "retryBackoffStrategy": {
                            "name": "none",
                            "delaySeconds": 0,
                            "arguments": []
                        }
                    },
                    "limits": {},
                    "conditions": []
                }
            ]
        },
    "timeoutSeconds": 40
}